{% extends 'base_login.html.twig' %}

{% block title %}{{ 'Log in!'|trans }}{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post">
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <i class="material-icons input-group-text" id="username-input">person</i>
                </div>
                <input type="text" value="{{ last_username }}" name="username" class="form-control"
                       placeholder="Username" required autofocus aria-label="Username"
                       aria-describedby="username-input">
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <i class="material-icons input-group-text" id="password-input">vpn_key</i>
                </div>
                <input type="password" name="password" id="inputPassword" class="form-control"
                       placeholder="Password"
                       required aria-label="Password" aria-describedby="password-input">
            </div>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="form-group float-right">
            <button class="btn btn-primary" type="submit">{{ 'Sign in'|trans }}</button>
        </div>
    </form>
{% endblock %}
